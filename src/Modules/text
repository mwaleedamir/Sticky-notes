import React, { useState } from 'react';

const AuthPage = () => {
  const [isLogin, setIsLogin] = useState(true);

  const togglePage = () => {
    setIsLogin(!isLogin);
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100">
      {/* flex: Applies flexbox layout */}
      {/* flex-col: Arranges children in a column */}
      {/* items-center: Centers children horizontally */}
      {/* justify-center: Centers children vertically */}
      {/* min-h-screen: Sets minimum height to 100% of the viewport height */}
      {/* bg-gray-100: Sets background color to a light gray */}

      <div className="w-full max-w-md p-8 space-y-8 bg-white rounded shadow-md">
        {/* w-full: Sets width to 100% */}
        {/* max-w-md: Sets maximum width to medium size */}
        {/* p-8: Adds padding of 8 units */}
        {/* space-y-8: Adds vertical spacing of 8 units between children */}
        {/* bg-white: Sets background color to white */}
        {/* rounded: Adds rounded corners */}
        {/* shadow-md: Adds medium box-shadow */}

        <h2 className="text-2xl font-bold text-center">{isLogin ? 'Login' : 'Sign Up'}</h2>
        {/* text-2xl: Sets font size to 2xl */}
        {/* font-bold: Sets font weight to bold */}
        {/* text-center: Centers the text */}

        {isLogin ? (
          <form className="mt-8 space-y-6">
            {/* mt-8: Adds top margin of 8 units */}
            {/* space-y-6: Adds vertical spacing of 6 units between children */}

            <div className="rounded-md shadow-sm">
              {/* rounded-md: Adds medium rounded corners */}
              {/* shadow-sm: Adds small box-shadow */}

              <div>
                <label htmlFor="email" className="sr-only">Email address</label>
                {/* sr-only: Hides the label visually but keeps it accessible for screen readers */}

                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  className="relative block w-full px-3 py-2 border border-gray-300 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Email address"
                />
                {/* relative: Positions the element relative to its normal position */}
                {/* block: Displays the element as a block */}
                {/* w-full: Sets width to 100% */}
                {/* px-3: Adds horizontal padding of 3 units */}
                {/* py-2: Adds vertical padding of 2 units */}
                {/* border: Adds a border */}
                {/* border-gray-300: Sets border color to light gray */}
                {/* rounded-t-md: Adds medium rounded corners to the top */}
                {/* focus:outline-none: Removes the default outline on focus */}
                {/* focus:ring-indigo-500: Adds an indigo ring on focus */}
                {/* focus:border-indigo-500: Changes border color to indigo on focus */}
              </div>

              <div className="-mt-px">
                {/* -mt-px: Adds negative top margin of 1 pixel to overlap the borders */}

                <label htmlFor="password" className="sr-only">Password</label>

                <input
                  id="password"
                  name="password"
                  type="password"
                  required
                  className="relative block w-full px-3 py-2 border border-gray-300 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Password"
                />
                {/* relative, block, w-full, px-3, py-2, border, border-gray-300, focus:outline-none, focus:ring-indigo-500, focus:border-indigo-500: Same as above */}
                {/* rounded-b-md: Adds medium rounded corners to the bottom */}
              </div>
            </div>

            <button
              type="submit"
              className="w-full px-4 py-2 font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Login
            </button>
            {/* w-full, px-4, py-2: Same as above */}
            {/* font-medium: Sets font weight to medium */}
            {/* text-white: Sets text color to white */}
            {/* bg-indigo-600: Sets background color to indigo */}
            {/* rounded-md: Adds medium rounded corners */}
            {/* hover:bg-indigo-700: Changes background color to a darker indigo on hover */}
            {/* focus:outline-none, focus:ring-2, focus:ring-offset-2, focus:ring-indigo-500: Styles for focus state */}
          </form>
        ) : (
          <form className="mt-8 space-y-6">
            {/* mt-8, space-y-6: Same as above */}

            <div className="rounded-md shadow-sm">
              {/* rounded-md, shadow-sm: Same as above */}

              <div>
                <label htmlFor="email" className="sr-only">Email address</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  className="relative block w-full px-3 py-2 border border-gray-300 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Email address"
                />
                {/* relative, block, w-full, px-3, py-2, border, border-gray-300, rounded-t-md, focus:outline-none, focus:ring-indigo-500, focus:border-indigo-500: Same as above */}
              </div>

              <div className="-mt-px">
                {/* -mt-px: Same as above */}
                <label htmlFor="password" className="sr-only">Password</label>
                <input
                  id="password"
                  name="password"
                  type="password"
                  required
                  className="relative block w-full px-3 py-2 border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Password"
                />
                {/* relative, block, w-full, px-3, py-2, border, border-gray-300, focus:outline-none, focus:ring-indigo-500, focus:border-indigo-500: Same as above */}
              </div>

              <div className="-mt-px">
                {/* -mt-px: Same as above */}
                <label htmlFor="confirm-password" className="sr-only">Confirm Password</label>
                <input
                  id="confirm-password"
                  name="confirm-password"
                  type="password"
                  required
                  className="relative block w-full px-3 py-2 border border-gray-300 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                  placeholder="Confirm Password"
                />
                {/* relative, block, w-full, px-3, py-2, border, border-gray-300, rounded-b-md, focus:outline-none, focus:ring-indigo-500, focus:border-indigo-500: Same as above */}
              </div>
            </div>

            <button
              type="submit"
              className="w-full px-4 py-2 font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            >
              Sign Up
            </button>
            {/* w-full, px-4, py-2, font-medium, text-white, bg-indigo-600, rounded-md, hover:bg-indigo-700, focus:outline-none, focus:ring-2, focus:ring-offset-2, focus:ring-indigo-500: Same as above */}
          </form>
        )}

        <div className="mt-4 text-center">
          {/* mt-4: Adds top margin of 4 units */}
          {/* text-center: Centers the text */}

          <button
            onClick={togglePage}
            className="text-indigo-600 hover:underline"
          >
            {isLogin ? 'Create an account' : 'Already have an account? Login'}
          </button>
          {/* text-indigo-600: Sets text color to indigo */}
          {/* hover:underline: Underlines the text on hover */}
        </div>
      </div>
    </div>
  );
};

export default AuthPage;







